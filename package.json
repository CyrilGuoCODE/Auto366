{
  "name": "auto366",
  "version": "0.1.5",
  "description": "天学网自动化答题工具，支持听音写词练习的自动填写",
  "main": "main.js",
  "author": "Auto366",
  "license": "GNUV3",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyrilguocode/Auto366.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^3.1.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.auto366.app",
    "productName": "Auto366",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png",
      "requestedExecutionLevel": "requireAdministrator"
    }
  }
}
